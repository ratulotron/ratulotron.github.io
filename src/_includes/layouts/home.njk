---
layout: layouts/base.njk
---

<main class="main-content">
  <!-- Introduction with scroll indicator -->
  <section class="content-section content-section--intro">
    <p class="intro__text">{{ site.intro }}</p>
    <div class="intro__scroll-indicator" aria-label="Scroll down for more content">
      <i class="fa-solid fa-arrow-down"></i>
    </div>
  </section>
  <!-- Timeline Section -->
  {% if home.timeline.entries.length > 0 %}
    <section class="content-section">
      <h2 class="content-section__heading">{{ home.timeline.heading }}</h2>
      <div class="timeline">
        {% for entry in home.timeline.entries %}
          <article class="timeline__entry">
            <p class="timeline__text">{{ entry.text | safe }}</p>
            <div class="timeline__year">
              <i class="fa-solid fa-arrow-right timeline__arrow"></i>
              <time datetime="{{ entry.year }}">{{ entry.year }}</time>
            </div>
          </article>
        {% endfor %}
      </div>
    </section>
  {% endif %}
  <!-- About Section -->
  {% if home.about %}
    <section class="content-section">
      <h2 class="content-section__heading">{{ home.about.heading }}</h2>
      <div class="content-section__text">
        {% for paragraph in home.about.paragraphs %}
          <p>{{ paragraph | safe }}</p>
        {% endfor %}
      </div>
    </section>
  {% endif %}
</main>
