{
  "name": "ratulotron.github.io",
  "version": "1.0.0",
  "type": "module",
  "description": "Personal portfolio and blog of Ratul Minhaz - Data Engineer based in Berlin",
  "packageManager": "pnpm@10.25.0",
  "scripts": {
    "start": "eleventy --serve",
    "build": "eleventy",
    "clean": "rm -rf _site",
    "design:capture": "pnpm run build && node scripts/capture-screenshots.js",
    "og:generate": "node scripts/generate-og-image.js",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:css:fix": "stylelint \"src/**/*.css\" --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ratulotron/ratulotron.github.io.git"
  },
  "keywords": [
    "portfolio",
    "blog",
    "11ty",
    "eleventy"
  ],
  "author": "Ratul Minhaz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ratulotron/ratulotron.github.io/issues"
  },
  "homepage": "https://github.com/ratulotron/ratulotron.github.io#readme",
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@quasibit/eleventy-plugin-sitemap": "^2.2.0",
    "@vercel/og": "^0.8.6",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "prettier-plugin-jinja-template": "^2.1.0",
    "react": "^19.2.3",
    "stylelint": "^16.9.0",
    "stylelint-config-recess-order": "^5.0.0",
    "stylelint-config-standard": "^36.0.0"
  }
}
